{
  "name": "nanoclamp",
  "description": "Responsive text clamping component for React",
  "homepage": "https://github.com/microlinkhq/nanoclamp",
  "version": "1.4.1",
  "main": "dist/nanoclamp.js",
  "module": "dist/nanoclamp.m.js",
  "author": {
    "name": "Brad Adams"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/nanoclamp.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/nanoclamp/issues"
  },
  "keywords": [
    "clamp",
    "clamping",
    "components",
    "ellipsis",
    "lines",
    "react"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "latest",
    "@babel/plugin-transform-react-constant-elements": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "@rollup/plugin-babel": "latest",
    "@rollup/plugin-terser": "latest",
    "@rollup/plugin-typescript": "latest",
    "@storybook/builder-webpack5": "latest",
    "@storybook/manager-webpack5": "latest",
    "@storybook/react": "latest",
    "@types/react": "^18",
    "babel-loader": "latest",
    "finepack": "latest",
    "nano-staged": "latest",
    "prettier-standard": "latest",
    "prop-types": "latest",
    "react": "^18",
    "react-dom": "^18",
    "rollup": "latest",
    "rollup-plugin-filesize": "latest",
    "rollup-plugin-peer-deps-external": "latest",
    "rollup-plugin-visualizer": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "ts-standard": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "dist",
    "typings"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup -c rollup.config.js --bundleConfigAsCjs",
    "build-storybook": "NODE_ENV=production build-storybook",
    "dev": "start-storybook -p 6006",
    "lint": "standard-markdown && ts-standard src && standard stories",
    "prepare": "npx simple-git-hooks",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "test": "exit 0"
  },
  "license": "MIT",
  "nano-staged": {
    "*.js": [
      "prettier-standard"
    ],
    "package.json": [
      "finepack"
    ]
  },
  "peerDependencies": {
    "react": "^18"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "standard": {
    "globals": [
      "React"
    ],
    "ignore": [
      "/dist/"
    ],
    "parser": "@babel/eslint-parser"
  },
  "types": "dist/index.d.ts"
}
